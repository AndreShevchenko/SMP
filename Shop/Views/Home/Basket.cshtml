@model List<Shop.ViewModels.OrderViewModel>
@{
    var title = "Корзина";
    ViewData["Title"] = title;
}
<h2>@title</h2>
@foreach (var order in Model)
{
<div class="md-t-1">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Название продукта</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Итого</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in order.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice</td>
                    <td>@item.Count</td>
                    <td>@item.TotalSum</td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Стоимость заказа: @order.TotalSum</h3>
    <h3><tr><td><a href="~/Home/Buy/">Оплатить заказ</a></td></tr></h3>
</div>
}
